{
  "manifest_version": 3,
  "name": "Daily Affirmations",
  "description": "Boost your day with uplifting affirmations delivered right to your screen!",
  "version": "1.0",
  "options_page": "options.html",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "storage",
    "alarms",
    "activeTab",
    "scripting",
    "notifications"
  ],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["main.js"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_popup": "index.html"
  }
}
